<script type="text/worker">
    on("change:vie1", function() {
        getAttrs(["vie1","modif1","modif2","modif3","modif4"], function(values) {
            if (values.vie1 >= 3) {
                setAttrs({ modif1: 1 });
            }
            else{
                setAttrs({ modif1: 0 });
            };
            if (values.vie1 >= 4) {
                setAttrs({ modif2: 1 });
            }
            else{
                setAttrs({ modif2: 0 });
            };
            if (values.vie1 >= 5) {
                setAttrs({ modif3: 1 });
            }
            else{
                setAttrs({ modif3: 0 });
            };
            if (values.vie1 >= 6) {
                setAttrs({ modif4: 1 });
            }
            else{
                setAttrs({ modif4: 0 });
            };
        });
    });
</script>
